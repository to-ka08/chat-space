.message
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at
  .lower-message
    - if message.body.present?
      %p.lower-message__content
        = message.body
    = image_tag message.image.url, class: "lowyer-message__image" if message.image.present?
